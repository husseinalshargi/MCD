@{
    if (ViewData.TryGetValue("ParentLayout", out var parentLayout) && parentLayout !=  null)
    {
        Layout = parentLayout.ToString();
    }
    else
    {
        Layout = "/Views/Shared/_Layout.cshtml";
    }
}

<!--page header-->
<div class="bg-light rounded-3 p-4 mb-4 shadow-sm">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3">
        <div class="d-flex align-items-center">
            <div>
                <h1 class="h3 mb-1 fw-bold text-primary">Manage your account</h1>
                <p class="text-muted mb-0">Change your account settings</p>
            </div>
        </div>
        <div>
            <a asp-area="Customer" asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary shadow-sm hover-shadow w-100">
                <i class="bi bi-arrow-return-left me-2"></i>Back to Home
            </a>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-3">
        <partial name="_ManageNav" />
    </div>
    <div class="col-md-9">
        @RenderBody()
    </div>
</div>
@section Scripts {
    @RenderSection("Scripts", required: false)
}
