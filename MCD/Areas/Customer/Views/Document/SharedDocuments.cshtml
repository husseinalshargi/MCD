<div class="container-lg py-4">
    <!-- Page Header -->
    <div class="bg-light rounded-3 p-4 mb-4 shadow-sm">
        <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3">
            <div class="d-flex align-items-center">
                <div>
                    <h1 class="h3 mb-1 fw-bold text-primary">Shared Documents</h1>
                    <p class="text-muted mb-0">View documents shared with you</p>
                </div>
            </div>
            <div>
                <a asp-area="Customer" asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary w-100 shadow-sm hover-shadow">
                    <i class="bi bi-arrow-return-left me-2"></i>Back to Home
                </a>
            </div>
        </div>
    </div>


    <div class="card shadow-sm mb-4">
        <div class="card-header bg-white py-3">
            <h5 class="mb-0 text-primary fw-semibold">Documents Shared With You</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table id="sharedDocumentsTable" class="table table-hover table-striped table-bordered table-sm align-middle text-nowrap">
                    <thead class="table-dark">
                        <tr>
                            <th scope="col">Document</th>
                            <th scope="col">File Name</th>
                            <th scope="col">Title</th>
                            <th scope="col">Author</th>
                            <th scope="col">Shared At</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
        <div class="d-block d-md-none mt-3"> <!-- 'd-md-none': hides the div on medium screens and larger (>=768px) -->
            <div class="alert alert-info mb-0">
                <i class="bi bi-info-circle me-2"></i>Swipe horizontally to see more columns
            </div>
        </div>
    </div>

    <!-- Help Card -->
    <div class="card shadow-sm border-0 bg-light">
        <div class="card-body">
            <div class="d-flex align-items-start">
                <div class="bg-primary bg-opacity-10 p-2 rounded-circle me-3">
                    <i class="bi bi-question-circle text-dark fs-4 "></i>
                </div>
                <div>
                    <h5 class="card-title">Need Help?</h5>
                    <p class="card-text mb-0">If you have any questions about MCD, please contact our support team in the email below.</p>
                    <a href="mailto:mycleverdoc@hotmail.com" class="btn btn-sm btn-link ps-0 text-decoration-none">
                        <i class="bi bi-envelope me-1"></i>Contact Support
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script src="~/js/SharedDocuments.js"></script>
    <style> /* Custom hover effect for buttons */
        .hover-shadow:hover {
            transform: translateY(-3px);
            box-shadow: 0 .5rem 1rem rgba(0,0,0,.15) !important;
            transition: all .3s;
        }
    </style>
}
